#!/usr/bin/env groovy

pipeline {
    agent none

    environment {
        MATTERMOST_DESKTOP_WINDOWS_PFX_PASSWORD = credentials('mattermost-desktop-windows-pfx-password')
    }
    stages {
        stage('Build Linux') {
            agent any
            steps {
                echo 'Building Mattermost Desktop App'
                sh """
                  rm -rf release
                  npm install
                  npm run build
                """

                echo 'Packaging for Linux'
                sh 'npm run package:linux'

                archiveArtifacts artifacts: 'release/mattermost-desktop-*-ia32.tar.gz,release/mattermost-desktop-*.tar.gz,release/mattermost-desktop_*_i386.deb,release/mattermost-desktop_*_amd64.deb'
            }
        }
        stage('Build Windows) {
            agent any
            steps {
                echo 'Building Mattermost Desktop App'
                sh """
                  rm -rf release
                  rm -rf codesign-*
                  npm install
                  npm run build
                """

                echo 'Packaging for Windows'
                sh 'npm run package:windows'

                echo 'Downloading codesigning certificate'
                withAWS(credentials:'mattermost-certificates-s3-bucket') {
                    s3Download(file:'mattermost-desktop-windows.pfx',bucket:'mattermost-certificates',path:'mattermost-desktop-windows.pfx',force:true)
                }

                echo 'Code Signing for Windows 32bit'
                sh """
                  WIN_IA32_VERSION=$(awk -F"-" '{print $2 }' <<< $(ls release/Mattermost-*-ia32-win.zip))
                  unzip -d codesign-win32 release/Mattermost-*-ia32-win.zip
                  cd codesign-win32/Mattermost-*-win32
                  osslsigncode -pkcs12 ../../mattermost-desktop-windows.pfx -pass $MATTERMOST_DESKTOP_WINDOWS_PFX_PASSWORD -n 'Mattermost Desktop' -i https://mattermost.com -t http://timestamp.verisign.com/scripts/timstamp.dll -h sha2 -in Mattermost.exe -out Mattermost-signed.exe
                  mv Mattermost-signed.exe Mattermost.exe
                  cd ../
                  zip -r ../release/Mattermost-$WIN_IA32_VERSION-ia32-win.zip Mattermost-*-win32/*
                  cd ../
                  rm -rf codesign-win32
                """
                archiveArtifacts artifacts: 'release/Mattermost-*-ia32-win.zip'

                echo 'Code Signing for Windows 64bit'
                sh """
                  WIN_64_VERSION=$(awk -F"-" '{print $2 }' <<< $(ls release/Mattermost-*[^ia32]-win.zip))
                  unzip -d codesign-win64 release/Mattermost-*[^ia32]-win.zip
                  cd codesign-win64/Mattermost-*-win64
                  osslsigncode -pkcs12 ../../mattermost-desktop-windows.pfx -pass $MATTERMOST_DESKTOP_WINDOWS_PFX_PASSWORD -n 'Mattermost Desktop' -i https://mattermost.com -t http://timestamp.verisign.com/scripts/timstamp.dll -h sha2 -in Mattermost.exe -out Mattermost-signed.exe
                  mv Mattermost-signed.exe Mattermost.exe
                  cd ../
                  zip -r ../release/Mattermost-$WIN_64_VERSION-win.zip Mattermost-*-win64/*
                  cd ../
                  rm -rf codesign-win64
                """
                archiveArtifacts artifacts: 'release/Mattermost-*[^ia32]-win.zip'

                echo 'Code Signing for Windows 32bit Installer'
                sh """
                  mv release/win-ia32/Mattermost\\ Setup\\ *-ia32.exe release/mattermost-setup-$WIN_IA32_VERSION-win32.exe
                  osslsigncode -pkcs12 mattermost-desktop-windows.pfx -pass $MATTERMOST_DESKTOP_WINDOWS_PFX_PASSWORD -n 'Mattermost Desktop' -i https://mattermost.com -t http://timestamp.verisign.com/scripts/timstamp.dll -h sha2 -in release/mattermost-setup-$WIN_IA32_VERSION-win32.exe -out release/mattermost-setup-$WIN_IA32_VERSION-win32-signed.exe
                  mv release/mattermost-setup-$WIN_IA32_VERSION-win32-signed.exe release/mattermost-setup-$WIN_IA32_VERSION-win32.exe
                """
                archiveArtifacts artifacts: 'release/mattermost-setup-$WIN_IA32_VERSION-win32.exe'

                echo 'Code Signing for Windows 64bit Installer'
                sh """
                  mv release/win/Mattermost\\ Setup\\ *.exe release/mattermost-setup-$WIN_64_VERSION-win64.exe
                  osslsigncode -pkcs12 mattermost-desktop-windows.pfx -pass $MATTERMOST_DESKTOP_WINDOWS_PFX_PASSWORD -n 'Mattermost Desktop' -i https://mattermost.com -t http://timestamp.verisign.com/scripts/timstamp.dll -h sha2 -in release/mattermost-setup-$WIN_64_VERSION-win64.exe -out release/mattermost-setup-$WIN_64_VERSION-win64-signed.exe
                  mv release/mattermost-setup-$WIN_64_VERSION-win64-signed.exe release/mattermost-setup-$WIN_64_VERSION-win64.exe
                """
                archiveArtifacts artifacts: 'release/mattermost-setup-$WIN_64_VERSION-win64.exe'

                sh 'rm mattermost-desktop-windows.pfx'
            }
        }
        stage('Build MacOS') {
            agent {
                node {
                    label 'macOS'
                    customWorkspace '/Users/administrator/go/src/github.com/mattermost/desktop'
                }
            }
            steps {
                withEnv(['PATH+NPM=/usr/local/bin']) {
                  echo 'Unlocking the keychain'
                  withCredentials([[$class: 'UsernamePasswordMultiBinding', credentialsId: 'macOS', usernameVariable: 'MACOS_USERNAME', passwordVariable: 'MACOS_PASSWORD']]) {
                      sh 'security -v unlock-keychain -p $MACOS_PASSWORD'
                  }

                  echo 'Building Mattermost Desktop App'
                  sh """
                    rm -rf release
                    npm install
                    npm run build
                  """

                  echo 'Packaging for MacOS'
                  sh """
                    npm run package:mac
                    MACOS_VERSION=$(awk -F"-" '{print $2 }' <<< $(ls release/Mattermost-*-mac.tar.gz))
                    mv release/Mattermost-*-mac.tar.gz release/mattermost-desktop-$MACOS_VERSION-macos.tar.gz
                  """

                  archiveArtifacts artifacts: 'release/mattermost-desktop-$MACOS_VERSION-macos.tar.gz'
                }
            }
        }
    }
}
